---
import { AstroFont } from "astro-font";
import "../globals.css";
export interface Props {
  title?: string;
}

const { title = "Abid Famasya" } = Astro.props;
const { pathname } = Astro.url;

const links = [
  { href: "/", label: "Home" },
  { href: "/about", label: "About" },
  { href: "/posts", label: "Blog" },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>

    <!-- Resource hints to reduce critical request chains -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <AstroFont
      config={[
        {
          src: [],
          name: "Inter",
          googleFontsURL:
            "https://fonts.googleapis.com/css2?family=Bricolage+Grotesque:opsz,wght@12..96,200..800&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap",
          preload: true,
          display: "swap",
          selector: "body",
          fallback: "sans-serif",
        },
        {
          src: [],
          name: "Bricolage Grotesque",
          googleFontsURL:
            "https://fonts.googleapis.com/css2?family=Bricolage+Grotesque:opsz,wght@12..96,200..800&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap",
          preload: true,
          display: "swap",
          selector: ".title",
          fallback: "sans-serif",
        },
      ]}
    />
  </head>
  <body class="px-4">
    <!-- Navigation -->
    <nav>
      <div
        class="max-w-4xl mx-auto flex flex-col md:flex-row justify-between items-center my-4"
      >
        <a href="/" class="text-xl title bg-amber-200 rounded-xl px-3"
          >Abid Famasya</a
        >
        <div class="mt-4 md:m-0 space-x-4" id="navigation">
          {
            links.map((link) => (
              <a
                href={link.href}
                class="hover:underline"
                aria-current={pathname === link.href ? "page" : undefined}
              >
                {link.label}
              </a>
            ))
          }
        </div>
      </div>

      <!-- Main Content -->
      <main class="mt-4 max-w-4xl mx-auto">
        <slot />
      </main>

      <footer class="mt-8"></footer>
    </nav>
  </body>
</html>
