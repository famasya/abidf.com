---
import "@fontsource-variable/bricolage-grotesque";
import "@fontsource-variable/inter";

import bricolageGrotesque from "@fontsource-variable/bricolage-grotesque/files/bricolage-grotesque-latin-standard-normal.woff2?url";
import inter from "@fontsource-variable/inter/files/inter-latin-standard-normal.woff2?url";

import "../globals.css";
export interface Props {
  title?: string;
}

const { title = "Abid Famasya" } = Astro.props;
const { pathname } = Astro.url;

// Normalize pathname for consistent comparison
const normalizedPathname =
  pathname.endsWith("/") && pathname !== "/" ? pathname.slice(0, -1) : pathname;

const links = [
  { href: "/", label: "Home" },
  { href: "/about", label: "About" },
  { href: "/posts", label: "Blog" },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link
      rel="preload"
      href={bricolageGrotesque}
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href={inter}
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
  </head>
  <body class="px-4">
    <!-- Navigation -->
    <nav>
      <div
        class="max-w-4xl mx-auto flex flex-col md:flex-row justify-between items-center my-4"
      >
        <a href="/" class="text-xl title bg-amber-200 rounded-xl px-3"
          >Abid Famasya</a
        >
        <div class="mt-4 md:m-0 space-x-4" id="navigation">
          {
            links.map((link) => (
              <a
                href={link.href}
                aria-current={
                  normalizedPathname === link.href ? "page" : undefined
                }
              >
                {link.label}
              </a>
            ))
          }
        </div>
      </div>

      <!-- Main Content -->
      <main class="mt-4 max-w-4xl mx-auto">
        <slot />
      </main>

      <footer class="mt-8"></footer>
    </nav>
  </body>
</html>
